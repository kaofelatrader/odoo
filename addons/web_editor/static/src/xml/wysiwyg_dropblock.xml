<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <group t-name="wysiwyg.buttons.dropblock">
        <button name="toggle" title="Toggle droppable blocks" data-method="toggle">Add blocks</button>
    </group>

    <t t-name="wysiwyg.dropblock.defaultblocks">
        <blocks>
            <wysiwyg-title><i class="fa fa-th-large"></i> Structure</wysiwyg-title>
            <block>
                <thumbnail>
                    <preview style="background-image: url(/web_editor/static/src/img/title.png);"/>
                    <wysiwyg-title>Title</wysiwyg-title>
                </thumbnail>
                <content>
                    <section style="text-align: center;"><h1>Your Site Title</h1></section>
                </content>
            </block>
            <block>
                <thumbnail>
                    <preview style="background-image: url(/web_editor/static/src/img/picture.png);"/>
                    <wysiwyg-title>Picture</wysiwyg-title>
                </thumbnail>
                <content>
                    <section style="text-align: center;">
                        <figure class="figure">
                            <img src="/web_editor/static/src/img/picture.png" class="figure-img img-fluid rounded img-thumbnail padding-large"/>
                            <figcaption style="text-align: center;" class="figure-caption"><i class="fa fa-1x fa-picture-o"></i>Add a caption to enhance the meaning of this image.</figcaption>
                        </figure>
                    </section>
                </content>
            </block>
        </blocks>
        <blocks>
            <wysiwyg-title><i class="fa fa-th-large"></i> Structure bis</wysiwyg-title>
            <block>
                <thumbnail>
                    <preview style="background-image: url(/web_editor/static/src/img/title.png);"/>
                    <wysiwyg-title>Title</wysiwyg-title>
                </thumbnail>
                <content>
                    <section style="text-align: center;"><h1>Your Site Title</h1></section>
                </content>
            </block>
        </blocks>
    </t>

</templates>
