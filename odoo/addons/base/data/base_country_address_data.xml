<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Address Format:
                street
                street2
                Zip City
                Country_name -->
        <record id="view_partner_address_street_zip_city_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state_id']" position="replace"/>
            </field>
        </record>

        <!-- Address Format:
                street
                street2
                City State_name Zip
                Country_name -->
        <record id="view_partner_address_street_city_state_zip_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="replace"/>
                <xpath expr="//field[@name='state_id']" position="after">
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                </xpath>
            </field>
        </record>

        <!-- Address Format:
                street
                street2
                City Zip
                Country_name -->
        <record id="view_partner_address_street_city_zip_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="replace"/>
                <xpath expr="//field[@name='city']" position="after">
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace"/>
            </field>
        </record>

        <!-- Address Format:
                street
                street2
                City Zip
                State_name
                Country_name -->
        <record id="view_partner_address_street_city_zip_state_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_address_format')]" position="attributes">
                    <attribute name="class">o_address_format o_zip_city</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="replace"/>
                <xpath expr="//field[@name='city']" position="after">
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace"/>
                <xpath expr="//field[@name='country_id']" position="before">
                    <div>
                        <field name="state_id" placeholder="state id"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Address Format:
                Zip
                State_name City
                street
                street2
                Country_name -->
        <record id="view_partner_address_zip_state_city_street_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                    <div class="o_address_format">
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                        <field name="city" placeholder="City" class="o_address_city"/>
                        <field name="street" placeholder="Street..." class="o_address_street"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Address Format
                street
                street2
                city
                state
                zip
                Country_name -->
        <record id="view_partner_address_street_city_statename_zip_country" model="ir.ui.view">
            <field name="name">view partner address form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="replace"/>
                <xpath expr="//field[@name='city']" position="replace"/>
                <xpath expr="//field[@name='state_id']" position="replace"/>
                <xpath expr="//field[@name='country_id']" position="before">
                    <div>
                        <field name="city" placeholder="City"/>
                    </div>
                    <div>
                        <field name="state_id" placeholder="State"/>
                    </div>
                    <div>
                        <field name="zip" placeholder="ZIP"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
